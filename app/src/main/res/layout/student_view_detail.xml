<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <TextView
        android:id="@+id/text_view_mssv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:text="MSSV : "
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/text_mssv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/text_view_mssv_detail"
        android:text="20161164"
        android:textColor="#000000"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/text_view_name_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/text_view_mssv_detail"
        android:text="Họ Tên : "
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/text_name_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/text_view_name_detail"
        android:layout_below="@+id/text_view_mssv_detail"
        android:text="Duong Le Giang"
        android:textColor="#000000"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/text_view_birthday_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/text_view_name_detail"
        android:text="Ngày Sinh : "
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/text_birthday_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/text_view_birthday_detail"
        android:layout_below="@+id/text_view_name_detail"
        android:text="15/09/1998"
        android:textColor="#000000"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/text_view_email_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_below="@+id/text_view_birthday_detail"
        android:text="Email : "
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/text_email_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/text_view_email_detail"
        android:layout_below="@+id/text_view_birthday_detail"
        android:text="duonggiang150998@gmail.com"
        android:textColor="#000000"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/text_view_address_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/text_view_email_detail"
        android:text="Địa Chỉ : "
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/text_address_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/text_view_address_detail"
        android:layout_below="@+id/text_view_email_detail"
        android:text="Nghe An"
        android:textColor="#000000"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/btn_cancel_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_address_detail"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="10dp"
        android:text="Cancel" />

    <Button
        android:id="@+id/btn_edit_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_address_detail"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/text_view_address_detail"
        android:text="Edit" />

</RelativeLayout>